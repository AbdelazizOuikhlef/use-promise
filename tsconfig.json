{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.test.*",
  ],
  "references": [
    { "path": "./tsconfig.eslint.json" },
    { "path": "./tsconfig.test.json" }
  ]
}
