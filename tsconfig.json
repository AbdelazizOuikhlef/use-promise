{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.test.*",
  ],
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
